<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Test Automation Suite" parallel="tests" thread-count="2">

    <!-- UI Test Suite -->
    <test name="UI Tests" preserve-order="true">
        <packages>
            <package name="com.example.ui"/>
        </packages>
    </test>

    <!-- API Test Suite -->
    <test name="API Tests" preserve-order="true">
        <classes>
            <class name="com.example.api.SampleAPITest"/>
        </classes>
    </test>

</suite>